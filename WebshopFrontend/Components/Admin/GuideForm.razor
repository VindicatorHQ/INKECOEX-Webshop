<EditForm Model="@GuideModel" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    
    <div class="mb-4">
        <label for="title" class="form-label fw-bold">Titel van de Gids</label>
        <InputText id="title" class="form-control" @bind-Value="GuideModel.Title" placeholder="Bijvoorbeeld: De ultieme Linux migratiegids" />
        <ValidationMessage For="@(() => GuideModel.Title)" class="text-danger small" />
    </div>

    <div class="mb-4">
        <label for="content" class="form-label fw-bold">Gids Content (HTML/Markdown)</label>
        <InputTextArea id="content" class="form-control" @bind-Value="GuideModel.Content" rows="15" placeholder="Voer hier de volledige tekst van de gids in (kan HTML of Markdown bevatten indien ondersteund door de weergave)." />
        <ValidationMessage For="@(() => GuideModel.Content)" class="text-danger small" />
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mb-4">@ErrorMessage</div>
    }

    <div class="d-flex justify-content-between">
        <a href="/admin/guides" class="btn btn-outline-secondary">Annuleren</a>
        <button type="submit" class="btn btn-primary" disabled="@IsSaving">
            @if (IsSaving)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            }
            @ButtonText
        </button>
    </div>
</EditForm>