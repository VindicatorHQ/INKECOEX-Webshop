<div class="modal fade @(IsVisible ? "show d-block" : "")" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);" aria-modal="@IsVisible" aria-hidden="@(!IsVisible)">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Bevestig Actie</h5>
                <button type="button" class="btn-close" @onclick="() => OnResult.InvokeAsync(false)" aria-label="Sluiten"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
                @if (ShowWarning)
                {
                    <p class="text-danger fw-bold">Deze actie kan niet ongedaan gemaakt worden.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="() => OnResult.InvokeAsync(false)">Annuleren</button>
                <button type="button" class="btn @(ConfirmButtonClass)" @onclick="() => OnResult.InvokeAsync(true)">@ConfirmText</button>
            </div>
        </div>
    </div>
</div>