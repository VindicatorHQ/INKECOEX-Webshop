@page "/admin/categories"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject IJSRuntime JsRuntime

<PageTitle>Admin Categorie Beheer</PageTitle>

<h1>Admin Categorie Beheer</h1>
<hr />

<div class="row">
    <div class="col-md-5">
        <h3>@((editingCategory.Id == 0) ? "Nieuwe Categorie" : "Categorie Bewerken")</h3>
        <EditForm Model="@editingCategory" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="name">Naam</label>
                <InputText id="name" class="form-control" @bind-Value="editingCategory.Name" />
            </div>
            
            <div class="mb-3">
                <label for="slug">Slug</label>
                <InputText id="slug" class="form-control" @bind-Value="editingCategory.Slug" />
            </div>

            <button type="submit" class="btn btn-primary">
                @(editingCategory.Id == 0 ? "Toevoegen" : "Opslaan")
            </button>
            @if (editingCategory.Id != 0)
            {
                <button type="button" class="btn btn-secondary ms-2" @onclick="ResetForm">Annuleren</button>
            }
        </EditForm>
        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="mt-3 alert @(statusSuccess ? "alert-success" : "alert-danger")">@statusMessage</div>
        }
    </div>

    <div class="col-md-7">
        <h3>Alle CategorieÃ«n</h3>
        @if (categories == null)
        {
            <p><em>Laden...</em></p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var category in categories)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @category.Name
                        <div>
                            <button class="btn btn-sm btn-info me-2" @onclick="() => EditCategory(category)">Bewerk</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategory(category.Id)">Verwijder</button>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</div>
