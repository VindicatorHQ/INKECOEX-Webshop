@page "/admin/products"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager NavigationManager

<PageTitle>Admin Product Beheer</PageTitle>

<AuthorizeView Roles="Admin" Context="authContext">
    <Authorized>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Product Beheer</h1>
            
            <button class="btn btn-success" id="create-product" @onclick="NavigateToProductCreatePage">Product Aanmaken</button>
            
            <div class="mb-4">
                <div class="input-group">
                    <InputText 
                        @bind-Value="searchModel.SearchTerm" 
                        @oninput="HandleInput"
                        class="form-control" 
                        placeholder="Zoek op naam of beschrijving..." />

                    <button type="button" class="btn btn-primary" @onclick="HandleSearch">Zoek</button>

                    @if (!string.IsNullOrEmpty(searchModel.SearchTerm))
                    {
                        <button type="button" class="btn btn-outline-secondary" @onclick="ClearSearch">Reset</button>
                    }
                </div>
            </div>
        </div>

        <p class="text-muted">Overzicht van alle producten.</p>
        <hr />
        
        @if (products.Any())
        {
            <table class="table">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Naam</th>
                    <th>Voorraad</th>
                    <th>Acties</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var p in products)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                        <td>@p.StockQuantity</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-2" id="edit-product" @onclick="() => NavigateToProductEditPage(p.Id)">Bewerken</button>
                            
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(p.Id)">Verwijder</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else if (!isLoading)
        {
            <div class="alert alert-info">Geen producten beschikbaar om te beheren.</div>
        }

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger mt-3">@ErrorMessage</div>
        }
    </Authorized>
    
    <NotAuthorized>
        <div class="alert alert-warning">U bent ingelogd, maar hebt niet de benodigde "Admin" rol voor deze pagina.</div>
    </NotAuthorized>
</AuthorizeView>