@page "/404"
@layout Layout.MainLayout 

<PageTitle>Fout 404: Pagina Niet Gevonden</PageTitle>

<div class="d-flex align-items-center justify-content-center">
    <div class="text-center p-5 rounded-3 bg-body-tertiary border shadow-lg max-w-lg mx-auto" style="max-width: 80vw;">
        
        <h1 class="display-1 fw-bold text-danger">404</h1>
        <h2 class="display-5 fw-medium text-body mb-3">Oeps! Pagina Niet Gevonden</h2>
        
        <p class="lead text-secondary-emphasis mb-4">
            Het spijt ons, maar het adres waar u naar zoekt bestaat niet. 
            De gevraagde softwarelicentie of pagina is mogelijk verplaatst of verwijderd.
        </p>

        <i class="bi bi-robot display-4 text-primary mb-4" aria-hidden="true"></i>

        <div class="mt-4">
            <a href="/" class="btn btn-primary btn-lg shadow-sm me-3">
                <i class="bi bi-house-door-fill me-2"></i> Terug naar de Homepage
            </a>
            
            <a href="/products" class="btn btn-outline-secondary btn-lg shadow-sm">
                Bekijk Ons Assortiment
            </a>
        </div>
        
        <div class="mt-5 pt-3 border-top border-secondary-subtle">
            <p class="text-secondary-emphasis text-xs">Foutcode: HTTP 404 / Blazor Router Error</p>
        </div>
    </div>
</div>