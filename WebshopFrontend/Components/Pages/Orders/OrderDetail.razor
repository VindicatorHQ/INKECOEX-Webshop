@page "/orders/{OrderId:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject NavigationManager NavigationManager

<PageTitle>Bestelling @OrderId</PageTitle>

@if (order == null)
{
    <p><em>Details laden...</em></p>
}
else
{
    <h1>Bestelling #@order.OrderId</h1>
    <span class="badge bg-primary fs-5">Status: @order.Status</span>
    <p class="mt-2">Geplaatst op: @order.OrderDate.ToLongDateString()</p>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h3>Bestelde Items</h3>
            <table class="table table-sm table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="text-end">Prijs</th>
                        <th class="text-center">Aantal</th>
                        <th class="text-end">Subtotaal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in order.Items)
                    {
                        <tr>
                            <td><a href="/products/@item.ProductId">@item.ProductName</a></td>
                            <td class="text-end">€@item.PriceAtOrder</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">€@item.Subtotal</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-info">
                        <td colspan="3" class="text-end fw-bold">Totaal betaald:</td>
                        <td class="text-end fw-bold">€@order.TotalAmount</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Verzendadres</h3>
            <div class="card card-body bg-light">
                <p class="mb-1">@order.FullName</p>
                <p class="mb-1">@order.AddressLine1</p>
                <p class="mb-1">@order.AddressLine2</p>
                <p class="mb-0">@order.Country</p>
            </div>
            <button class="btn btn-outline-secondary mt-3" @onclick="NavigateToMyOrdersPage">
                &larr; Terug naar overzicht
            </button>
        </div>
    </div>
}