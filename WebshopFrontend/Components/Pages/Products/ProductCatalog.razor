@page "/products"
@inherits WebshopFrontend.Components.Pages.ProductBase

<PageTitle>Product Catalogus</PageTitle>

<div class="container">
    <h1 class="display-4 mb-4">Ontdek Onze Software</h1>

    <div class="card p-3 mb-4 shadow-sm bg-body-tertiary">
        <div class="row align-items-end">

            <div class="col-md-5 mb-3">
                <label for="search" class="form-label fw-bold text-body-emphasis">Zoek op Naam/Beschrijving</label>
                <InputText 
                    id="search"
                    @bind-Value="SearchModel.SearchTerm" 
                    @oninput="HandleInput"
                    class="form-control" 
                    placeholder="Zoek licenties of tools..." />
            </div>
    
            <div class="col-md-3 mb-3">
                <label for="category" class="form-label fw-bold text-body-emphasis">Filter op Categorie</label>
                <select id="category" 
                        class="form-select"
                        @onchange="e => FilterByCategory(e.Value?.ToString())">
                    
                    <option value="">-- Alle Categorieën --</option>
                    
                    @foreach (var cat in Categories)
                    {
                        <option value="@cat.Slug" selected="@(cat.Slug == SearchModel.CategorySlug)">
                            @cat.Name
                        </option>
                    }
                </select>
            </div>
            
            <div class="col-md-2 mb-3">
                <label for="sort" class="form-label fw-bold text-body-emphasis">Sorteren</label>
                <button id="sort" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center" @onclick="TogglePriceSort">
                    @switch (SortOrder)
                    {
                        case 1:
                            <i class="bi bi-sort-numeric-down me-2">Prijs Hoogst</i>
                            break;
                        case -1:
                            <i class="bi bi-sort-numeric-up me-2">Prijs Laagst</i>
                            break;
                        default:
                            <i class="bi bi-sort-alpha-down me-2">Standaard</i>
                            break;
                    }
                </button>
            </div>
            
            <div class="col-md-2 mb-3">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearSearch" 
                        disabled="@(string.IsNullOrEmpty(SearchModel.SearchTerm) && string.IsNullOrEmpty(SearchModel.CategorySlug))">
                    <i class="bi bi-x-circle"></i> Reset
                </button>
            </div>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Laden...</span>
            </div>
            <p class="mt-2">Producten worden geladen...</p>
        </div>
    }
    else if (Products.Any())
    {
        <p class="text-muted">Er zijn @Products.Count licenties beschikbaar.</p>
        
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var p in Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary-emphasis">@p.Name</h5>
                            <p class="card-text text-muted small">
                                @(p.Description.Length > 100 ? p.Description.Substring(0, 100) + "..." : p.Description)
                            </p>
                            
                            <div class="mt-auto pt-3 border-top">
                                <span class="d-block fw-bold display-6 mb-2">€@p.Price.ToString("F2")</span>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-success fw-bold">Op voorraad: @p.StockQuantity</small>
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToProductPage(p.Id)">
                                        Bekijk Product <i class="bi bi-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            Helaas, geen producten gevonden die aan de filters voldoen. Probeer de filters te resetten.
        </div>
    }
</div>
