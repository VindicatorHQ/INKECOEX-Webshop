@page "/products"
@inject NavigationManager NavigationManager

<PageTitle>Product Catalogus</PageTitle>

<h1>Producten</h1>

<div class="mb-4">
    <div class="input-group">
    <InputText 
        @bind-Value="searchModel.SearchTerm" 
        @oninput="HandleInput"
        class="form-control" 
        placeholder="Zoek op naam of beschrijving..." />

    <button type="button" class="btn btn-primary" @onclick="HandleSearch">Zoek</button>

    @if (!string.IsNullOrEmpty(searchModel.SearchTerm))
    {
        <button type="button" class="btn btn-outline-secondary" @onclick="ClearSearch">Reset</button>
    }
    </div>
</div>

@if (isLoading)
{
    <p><em>Producten worden geladen...</em></p>
}
else if (products.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Naam</th>
            <th>Prijs</th>
            <th>Voorraad</th>
            <th>Categorieën</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in products)
        {
            <tr style="cursor: pointer" @onclick="@(e => NavigateToProductPage(product.Id))">
                <td>@product.Name</td>
                <td>€ @product.Price</td>
                <td>@product.StockQuantity</td>
                <td>@product.CategoryNames</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Geen producten gevonden.</div>
}